<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 左三角 -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="85%"
            android:pivotY="-40%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="?attr/color_k_fota_bg" />
                <stroke android:width="1dp"
                    android:color="#FF4db871"/>
            </shape>
        </rotate>
    </item>
</layer-list>