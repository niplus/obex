<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_4r_fill_fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_sell"
            android:textColor="?attr/font_color"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/tv_content" />

        <TextView
            android:id="@+id/tv_show_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red_color"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@string/contractweituo_type_market"
            android:textColor="?attr/font_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_show_num"
            android:layout_marginStart="20dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edt_buy_price"
            android:hint="@string/enter_limit_price"
            android:textSize="13sp"
            android:text="@string/exchange_optimal"
            android:enabled="false"
            android:textColorHint="?attr/font_color4"
            android:inputType="numberDecimal"
            android:textColor="?attr/font_color"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            android:background="@color/color_f5f5f5_4d4d4d"
            android:editable="false"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/future_value"
            android:textColor="?attr/font_color"
            android:textSize="14sp"
            android:layout_marginTop="29dp"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toStartOf="@+id/edt_buy_price"
            app:layout_constraintEnd_toEndOf="@+id/edt_buy_price"
            android:text="100%"
            android:textSize="13sp"
            android:textColor="?attr/font_color"
            android:inputType="numberDecimal"
            android:textColorHint="?attr/font_color4"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            android:background="@color/color_f5f5f5_4d4d4d"
            android:enabled="false"
            android:id="@+id/edt_buy_quantity"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

        <com.fota.android.widget.FuturesProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/edt_buy_quantity"
            app:layout_constraintTop_toBottomOf="@+id/edt_buy_quantity"
            android:layout_marginTop="10dp"
            android:background="?attr/bg_color"
            android:id="@+id/progressBar"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_3r_fill_eff0f4"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#ff333333"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toStartOf="@+id/tv_confirm" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_removemoney_button"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="#fff"
            android:textSize="16sp"
            android:id="@+id/tv_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>