<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/horizontal_fill"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/touch_bg"
    >

    <com.fota.android.widget.ColorView
        android:id="@+id/five_item_view"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_gravity="right|center_vertical" />

    <LinearLayout style="@style/horizontal_fill"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/txt_depth_price"
            style="@style/horizontal_weight1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="10sp"
            tools:text="103.0000000000" />

        <TextView
            android:id="@+id/txt_depth_volume"
            style="@style/horizontal_weight1"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="?attr/font_color"
            android:textSize="10sp"
            tools:text="5.00000000000" />

    </LinearLayout>

</FrameLayout>