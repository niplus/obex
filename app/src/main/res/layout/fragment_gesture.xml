<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_color"
        android:orientation="vertical">

        <include layout="@layout/title_include" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/safe_gesture_title"
                android:textColor="?attr/font_color"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/switch_gest"
                style="@style/safecheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:checked="true" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_change_gesture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawableRight="?attr/icon_right"
            android:gravity="center_vertical"
            android:text="修改手势密码"
            android:textColor="?attr/font_color"
            android:textSize="14sp"
            android:focusable="true" />


    </LinearLayout>


</layout>