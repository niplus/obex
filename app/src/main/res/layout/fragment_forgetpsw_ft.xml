<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_color"
        android:orientation="vertical">

        <include layout="@layout/title_include" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_color"
            android:orientation="vertical"
            android:paddingLeft="38dp"
            android:paddingRight="38dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_child"
                    android:layout_alignParentBottom="true">

                    <com.fota.android.widget.btbwidget.ClearEdittext
                        android:id="@+id/edt_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="@string/resetpsw_account_hint"
                        android:singleLine="true"
                        android:textColor="?attr/font_color"
                        android:textColorHint="?attr/font_color3"
                        android:textSize="15sp" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_account"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_child"
                    android:layout_alignParentBottom="true">

                    <EditText
                        android:id="@+id/edt_vcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="90dp"
                        android:background="@null"
                        android:hint="@string/resetpsw_pic_code_hint"
                        android:singleLine="true"
                        android:textColor="?attr/font_color"
                        android:textColorHint="?attr/font_color5"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imv_vcode"
                            android:layout_width="63dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="3dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/imv_refresh"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_refresh" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_code"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/line_color" />
        </LinearLayout>

        <com.fota.android.widget.btbwidget.FotaButton
            android:id="@+id/btn_forget_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll_edt"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="60dp"
            android:text="@string/resetpsw_next"
            android:textSize="15sp" />
    </LinearLayout>


</layout>