<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/horizontal_fill"
    android:layout_height="60dp"
    android:background="?attr/bg_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_money_to"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/transfer_to_contract"
            android:textColor="?attr/font_color2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_date_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:textColor="?attr/font_color4"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_transfer_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_hengxian"
            android:textColor="?attr/font_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="bottom"
            android:paddingBottom="1dp"
            android:text="USDT"
            android:textColor="?attr/font_color2"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>

