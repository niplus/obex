<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout style="@style/all_fill">

        <LinearLayout
            style="@style/all_fill"
            android:orientation="vertical">

            <com.fota.android.widget.KlineTitleBarLayout
                android:id="@+id/bar_markets_kline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/bg_color" />

            <View
                style="@style/horizontal_line"
                android:background="?attr/divider_line_color" />

            <LinearLayout
                style="@style/vertical_weight1"
                android:background="?attr/bg_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="0.52"
                    android:orientation="vertical">

                    <com.guoziwei.fota.chart.view.fota.FotaBigKLineBarChartView
                        android:id="@+id/kline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                    </com.guoziwei.fota.chart.view.fota.FotaBigKLineBarChartView>

                    <com.guoziwei.fota.chart.view.fota.FotaBigTimeLineBarChartView
                        android:id="@+id/tline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                    </com.guoziwei.fota.chart.view.fota.FotaBigTimeLineBarChartView>
                </LinearLayout>

                <!--<View style="@style/horizontal_line"/>-->

                <!--style="@style/horizontal_fill"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.48"
                    android:background="?attr/bg_color"
                    android:orientation="horizontal"
                    android:paddingTop="6dp">

                    <LinearLayout
                        android:id="@+id/deal_left_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout style="@style/horizontal_fill">

                            <TextView
                                android:id="@+id/txt_deal_time"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:onClick="@{view.onClick}"
                                android:text="@string/common_deal_time"
                                android:textColor="?attr/font_color4"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_price"
                                style="@style/horizontal_weight_fill"
                                android:gravity="center"
                                android:onClick="@{view.onClick}"
                                android:text="@string/common_price"
                                android:textColor="?attr/font_color4"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_volume"
                                style="@style/horizontal_weight_fill"
                                android:gravity="right"
                                android:onClick="@{view.onClick}"
                                android:text="@string/common_amount"
                                android:textColor="?attr/font_color4"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:descendantFocusability="blocksDescendants">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_deal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </androidx.recyclerview.widget.RecyclerView>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include layout="@layout/content_index_container" />
                    </LinearLayout>

                    <com.fota.android.widget.DepthRefreshView
                        android:id="@+id/depth_right_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                    </com.fota.android.widget.DepthRefreshView>

                </LinearLayout>

                <!--android:background="?attr/bg_color"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/bg_color"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/normal_dp">

                    <com.fota.android.widget.btbwidget.FotaButton
                        android:id="@+id/btn_buy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/small_button_height"
                        android:layout_marginLeft="@dimen/normal_dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_circular"
                        android:text="@string/common_buy"
                        android:textSize="@dimen/big_size" />

                    <com.fota.android.widget.btbwidget.FotaButton
                        android:id="@+id/btn_sell"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/small_button_height"
                        android:layout_marginLeft="@dimen/normal_dp"
                        android:layout_marginRight="@dimen/normal_dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_circular"
                        android:text="@string/common_sell"
                        android:textSize="@dimen/big_size" />
                </LinearLayout>
            </LinearLayout>
            <!--<View style="@style/horizontal_line" />-->

        </LinearLayout>

        <include layout="@layout/fragment_container" />

    </FrameLayout>
</layout>