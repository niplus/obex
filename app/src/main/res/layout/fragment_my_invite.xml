<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.fota.android.moudles.InviteViewModel" />
    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".moudles.MyInviteFragment"
        android:background="@drawable/shape_25r_fill_f7faff">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/success_invite"
            android:textColor="@color/color_333333_ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:textColor="#ff395fc3"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginTop="5dp"
            android:id="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:textColor="#ff395fc3"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="5dp"
            android:id="@+id/textView1"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_invite_hint1"
            android:textColor="#ff707a8a"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_invite_hint2"
            android:textColor="#ff707a8a"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView1"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            android:id="@+id/textView3"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_eaf1ff_000000"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="10dp"
            android:id="@+id/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="29dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707A8A"
                    android:textSize="22sp"
                    android:id="@+id/tv_today"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="30dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_yestoday"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/人"
                    android:id="@+id/tv_yestoday"
                    android:textColor="#707A8A"
                    android:textSize="22sp"
                    android:layout_marginStart="80dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_today"
                    app:layout_constraintStart_toEndOf="@+id/tv_today"
                    app:layout_constraintEnd_toStartOf="@+id/tv_total"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/人"
                    android:id="@+id/tv_total"
                    android:layout_marginStart="80dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_yestoday"
                    app:layout_constraintStart_toEndOf="@+id/tv_yestoday"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#707A8A"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textColor="@color/color_707a80_e5e5e5"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_today"
                    app:layout_constraintEnd_toEndOf="@id/tv_today"
                    app:layout_constraintTop_toBottomOf="@+id/tv_today"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yestoday"
                    android:textColor="@color/color_707a80_e5e5e5"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_yestoday"
                    app:layout_constraintEnd_toEndOf="@id/tv_yestoday"
                    app:layout_constraintTop_toBottomOf="@+id/tv_yestoday"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@color/color_707a80_e5e5e5"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_total"
                    app:layout_constraintEnd_toEndOf="@id/tv_total"
                    app:layout_constraintTop_toBottomOf="@+id/tv_total"
                    android:layout_marginTop="4dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/invite_record"
            android:textColor="@color/color_333333_ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_ecf2ff_0c1115"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/view">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/invite_account"
                android:textColor="#ff707a8a"
                android:textSize="12sp"
                android:layout_weight="2"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                android:layout_marginStart="7dp"
                android:id="@+id/textView4"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_level"
                android:layout_weight="1"
                android:textColor="#ff707a8a"
                android:textSize="12sp"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                android:id="@+id/textView5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/yestoday_trans_volume"
                android:textColor="#ff707a8a"
                android:textSize="12sp"
                android:layout_weight="2"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/invite_time"
                android:textColor="#ff707a8a"
                android:textSize="12sp"
                android:layout_weight="2"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/view"
                android:layout_marginEnd="18dp"
                />
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/rv_invite_record"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>