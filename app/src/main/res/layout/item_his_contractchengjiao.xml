<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/horizontal_fill"
    android:background="?attr/reverse_bg"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        style="@style/horizontal_fill"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="?attr/reverse_bg2"
        app:cardCornerRadius="6dp"
        app:cardElevation="0.3dp">

        <LinearLayout
            android:id="@+id/order_main"
            style="@style/horizontal_fill">

            <View
                android:id="@+id/order_left"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@drawable/ft_left_corner"
                android:visibility="gone" />

            <LinearLayout
                style="@style/horizontal_fill"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/horizontal_fill"
                    android:gravity="center_vertical">

                    <LinearLayout
                        style="@style/horizontal_weight1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/asset_name"
                            style="@style/wrap_style"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:textColor="?attr/font_color"
                            android:textSize="15sp"
                            tools:text="BTC/USDK" />

                        <TextView
                            android:id="@+id/buy_or_sell"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ft_rectangle"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="#FF4DB871"
                            android:textSize="10sp"
                            tools:text="--" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/entrust_time"
                        style="@style/wrap_style"
                        android:textColor="?attr/font_color4"
                        android:textSize="10sp"
                        tools:text="2018.06.29 10:00:00" />

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontal_fill"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        style="@style/wrap_style"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/wrap_style"
                            android:gravity="center_vertical"
                            android:text="@string/contractweituo_type"
                            android:textColor="?attr/font_color4"
                            android:textSize="10sp" />

                        <TextView
                            style="@style/wrap_style"
                            android:text="@string/contractdeal_price"
                            android:textColor="?attr/font_color4"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp" />

                        <TextView
                            style="@style/wrap_style"
                            android:text="@string/contractdeal_gechar"
                            android:textColor="?attr/font_color4"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/horizontal_weight_fill"
                        android:gravity="right|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/order_type"
                            style="@style/wrap_style"
                            android:gravity="center_vertical"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/entrust_price"
                            style="@style/wrap_style"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/fee"
                            style="@style/wrap_style"
                            android:layout_marginTop="10dp"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:textSize="9.6sp" />

                    </LinearLayout>

                    <com.fota.android.widget.myview.DashLineView
                        android:layout_width="2dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        style="@style/vertical_fill"
                        android:orientation="vertical">

                        <TextView
                            style="@style/wrap_style"
                            android:gravity="center_vertical"
                            android:text="@string/contractdeal_money"
                            android:textColor="?attr/font_color4"
                            android:textSize="10sp" />

                        <TextView
                            style="@style/wrap_style"
                            android:text="@string/realized_profit_loss"
                            android:textColor="?attr/font_color4"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/horizontal_weight_fill"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/money"
                            style="@style/wrap_style"
                            android:gravity="center_vertical"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/profit"
                            style="@style/wrap_style"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

