<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/view10"
        android:id="@+id/container"
        android:layout_marginBottom="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/iv_post"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/img_invite_post"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/iv_post"
            app:layout_constraintEnd_toEndOf="@id/iv_post"
            android:src="@mipmap/icon_confirm"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cooperation_benefit"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/iv_post"
            app:layout_constraintEnd_toEndOf="@+id/iv_post"
            app:layout_constraintStart_toStartOf="@+id/iv_post"
            android:layout_marginStart="15dp"
            android:gravity="end"
            android:textStyle="bold|italic"
            android:shadowColor="#000"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="3"
            android:id="@+id/tv_post_title"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/iv_post"
            app:layout_constraintEnd_toEndOf="@id/tv_post_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_title"
            android:gravity="end"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:text="@string/invite_post_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#e5e5e5"
            android:textSize="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/iv_post"
            app:layout_constraintEnd_toEndOf="@+id/iv_post"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/invite_post_hint"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#FFF"
            android:id="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/iv_post"
            app:layout_constraintStart_toStartOf="@+id/iv_post"
            app:layout_constraintEnd_toEndOf="@id/iv_post"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:id="@+id/tv_invite_code"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333"
            android:text="@string/futures_risk"
            app:layout_constraintTop_toBottomOf="@+id/tv_invite_code"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_qrcode"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_post"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginEnd="15dp"
            android:id="@+id/iv_qrcode"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_to"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:id="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/view10"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/icon_close_commission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view10"
        android:id="@+id/iv_close"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_save_pic"
        android:id="@+id/iv_save"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>