<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@+id/ll_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imv_logo"
                    android:layout_width="237dp"
                    android:layout_height="61.5dp"
                    android:src="@mipmap/icon_logo_login" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="?attr/reverse_bg2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">


                            <LinearLayout
                                android:id="@+id/ll_phone_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="17dp"
                                    android:src="?attr/phone_check" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/regist_byphone"
                                    android:textColor="?attr/main_color"
                                    android:textSize="17sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_phone_uncheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:src="?attr/phone_uncheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/regist_byphone"
                                    android:textColor="?attr/font_color4"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_email_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:src="?attr/email_check" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/regist_byemail"
                                    android:textColor="?attr/main_color"
                                    android:textSize="17sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_email_uncheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="12dp"
                                    android:src="?attr/email_uncheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/regist_byemail"
                                    android:textColor="?attr/font_color4"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_parent"
                                android:layout_marginTop="5dp">

                                <RelativeLayout
                                    android:id="@+id/rl_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true">

                                    <TextView
                                        android:id="@+id/tv_country_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:drawableRight="@mipmap/icon_down"
                                        android:drawablePadding="3dp"
                                        android:gravity="center_vertical"
                                        android:text="+86"
                                        android:textColor="?attr/font_color"
                                        android:visibility="visible" />

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_account_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/tv_country_phone"
                                        android:background="@null"
                                        android:digits="1234567890"
                                        android:hint="@string/login_phone_hint"
                                        android:imeOptions="actionNext"
                                        android:inputType="number"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp" />

                                    <View
                                        android:id="@+id/view_account_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignParentBottom="true"
                                        android:background="?attr/line_color" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rl_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true"
                                    android:visibility="gone">

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_account_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="@null"
                                        android:hint="@string/login_email_hint"
                                        android:imeOptions="actionNext"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp"
                                        android:visibility="gone" />

                                    <View
                                        android:id="@+id/view_account_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignParentBottom="true"
                                        android:background="?attr/line_color" />
                                </RelativeLayout>

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true">

                                    <com.fota.android.widget.btbwidget.VCodeButton
                                        android:id="@+id/tv_getvcode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@android:color/transparent"
                                        android:text="@string/regist_getcode"
                                        android:textColor="?attr/font_color"
                                        android:textSize="15sp" />

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_vcode"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_toLeftOf="@+id/tv_getvcode"
                                        android:background="@null"
                                        android:digits="0123456789"
                                        android:hint="@string/regist_vcode_hint"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp" />


                                </RelativeLayout>

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_code"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?attr/line_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true">

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_pasword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="30dp"
                                        android:background="@null"
                                        android:hint="@string/regist_password"
                                        android:inputType="textPassword"
                                        android:maxLength="32"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp" />

                                    <CheckBox
                                        android:id="@+id/cb_eye_psw"
                                        style="@style/eyecheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:background="@android:color/transparent"
                                        android:checked="false" />
                                </RelativeLayout>

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_psw"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?attr/line_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true">

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_repassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="30dp"
                                        android:background="@null"
                                        android:hint="@string/regist_make"
                                        android:inputType="textPassword"
                                        android:maxLength="32"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp" />

                                    <CheckBox
                                        android:id="@+id/cb_eye_psw2"
                                        style="@style/eyecheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:checked="false"
                                        android:gravity="center_vertical" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_pass_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="3dp"
                                    android:textSize="11sp"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_psw2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?attr/line_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_child"
                                    android:layout_alignParentBottom="true">

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/edt_invitation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="@null"
                                        android:hint="@string/regist_invitation_init"
                                        android:maxLength="32"
                                        android:singleLine="true"
                                        android:textColor="?attr/font_color"
                                        android:textColorHint="?attr/font_color3"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_invitation"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?attr/line_color" />

                            <com.fota.android.widget.btbwidget.FotaButton
                                android:id="@+id/btn_regist_ft"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/selector_login_btn_ft"
                                android:clickable="true"
                                android:enabled="true"
                                android:gravity="center"
                                android:text="@string/regist_title"
                                android:textSize="15sp"
                                android:focusable="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btn_regist_ft"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cb_readme"
                                    style="@style/regsitcheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:checked="false"
                                    android:text="  " />

                                <com.fota.android.widget.btbwidget.NewLineLinearlayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/regist_read"
                                        android:textColor="?attr/font_color2"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_fwtk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="@string/regist_fwtk"
                                        android:textColor="?attr/main_color"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_mzsm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="@string/regist_mzsm"
                                        android:textColor="?attr/main_color"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_ysbh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="@string/regist_ysbh"
                                        android:textColor="?attr/main_color"
                                        android:textSize="11sp" />
                                </com.fota.android.widget.btbwidget.NewLineLinearlayout>
                            </LinearLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:id="@+id/ll_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="    "
                                    android:textColor="?attr/font_color4"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text="@string/common_login"
                                    android:textColor="?attr/main_color"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</layout>
