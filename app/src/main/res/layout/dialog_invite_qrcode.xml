<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/img_invite_qrcode"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/icon_close_commission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sweep_face_to_face"
        android:textColor="#fffefefe"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="46dp"
        android:layout_marginStart="42dp"
        android:id="@+id/tv_hint"
        app:layout_constraintEnd_toEndOf="@id/iv_qrcode"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_qrcode"
        android:background="#FFF"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_hint"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="42dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>