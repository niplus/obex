<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/horizontal_fill"
    android:background="?attr/reverse_bg"
    android:orientation="vertical">

    <View
        style="@style/horizontal_line"
        android:background="?attr/bg_color"
        android:visibility="invisible" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_layout"
        style="@style/all_fill"
        android:layout_marginBottom="30dip"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/empty_top_margin"
            style="@style/horizontal_fill"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="90dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/common_no_data" />

        <TextView
            android:id="@+id/empty_text"
            style="@style/horizontal_fill"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/common_data_empty"
            android:textColor="?attr/font_color"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/empty_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/small_dp"
            android:text="@string/common_reload"
            android:textColor="@color/disable"
            android:textSize="@dimen/big_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_favor_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ft_border_favor_sync"
            android:gravity="center"
            android:padding="@dimen/small_dp"
            android:textColor="?attr/favor_sync_color"
            android:visibility="gone"
            tools:text="- -" />

        <View
            android:id="@+id/empty_bottom_margin"
            style="@style/horizontal_fill"
            android:layout_height="90dp" />


    </LinearLayout>


</LinearLayout>

