<?xml version="1.0" encoding="utf-8"?>
<!--止盈止损弹框-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/shape_4r_fill_fff">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/icon_back"
            android:id="@+id/iv_back" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="止盈止损"
            android:textColor="#ff333333"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="止盈"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_back"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启止盈"
            android:textColor="#ff999999"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView1"
            app:layout_constraintEnd_toEndOf="parent" />

        <ToggleButton
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:button="@null"
            android:id="@+id/tg_buy"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:background="@drawable/selector_switch_bg"
            android:textOff=" "
            android:textOn=" "
            android:layout_marginEnd="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="触发价格"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginTop="21dp"
            tools:layout_editor_absoluteX="15dp"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            android:background="@drawable/shape_3r_stroke_cacaca"
            android:id="@+id/edt_buy_trigger_price"
            android:hint="请输入止盈触发价格"
            android:textSize="13sp"
            android:inputType="numberDecimal"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="市价"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_change"
            android:id="@+id/iv_buy_change"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edt_buy_price"
            android:hint="请输入止盈价格"
            android:textSize="13sp"
            android:text="市场最优价"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:textColor="#333333"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            android:background="@drawable/shape_3r_stroke_cacaca"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_marginTop="29dp"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="请输入止盈数量"
            android:textSize="13sp"
            android:textColor="#333333"
            android:inputType="numberDecimal"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            android:background="@drawable/shape_3r_stroke_cacaca"
            android:id="@+id/edt_buy_quantity"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="止损"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启止损"
            android:textColor="#ff999999"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" />

        <ToggleButton
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:background="@drawable/selector_switch_bg"
            android:textOff=" "
            android:textOn=" "
            android:id="@+id/tg_sell"
            android:checked="true"
            android:layout_marginEnd="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="触发价格"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="21dp"
            tools:layout_editor_absoluteX="15dp"
            android:id="@+id/textView8" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edt_sell_trigger_price"
            android:hint="请输入止损触发价"
            android:textSize="13sp"
            android:inputType="numberDecimal"
            android:textColor="#333333"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            android:background="@drawable/shape_3r_stroke_cacaca"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="市价"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_change"
            android:id="@+id/iv_sell_change"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:id="@+id/edt_sell_price"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="请输入止损价格"
            android:textSize="13sp"
            android:textColor="#333333"
            android:inputType="numberDecimal"
            android:text="市场最优价"
            android:enabled="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
            android:background="@drawable/shape_3r_stroke_cacaca"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_marginTop="29dp"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <EditText
            android:id="@+id/edt_sell_quantity"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:hint="请输入止损数量"
            android:background="@drawable/shape_3r_stroke_cacaca"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="13sp"
            android:textColor="#333333"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_3r_fill_eff0f4"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff333333"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_sell_quantity"
            app:layout_constraintEnd_toStartOf="@+id/textView12" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_3r_fill_59ad6d"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="16sp"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/edt_sell_quantity" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>