<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/selector_market_tab"
        android:textSize="15sp"
        android:text="123123"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_tab"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="@+id/tv_tab"
        app:layout_constraintEnd_toEndOf="@+id/tv_tab"
        app:layout_constraintTop_toBottomOf="@+id/tv_tab"
        android:background="@drawable/selector_market_tab_indic"
        android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>