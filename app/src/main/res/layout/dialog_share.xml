<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_content"
            android:id="@+id/v_outside"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/container"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cv_bg"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_dialog_share"
                    android:id="@+id/iv_bg" />
            </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_share_logo"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@+id/cv_bg"
                app:layout_constraintStart_toStartOf="@+id/cv_bg"
                android:layout_marginStart="36dp"
                android:layout_marginTop="36dp"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/main_buy_color"
                android:text="买"
                app:layout_constraintTop_toTopOf="@+id/cv_bg"
                app:layout_constraintStart_toStartOf="@+id/cv_bg"
                android:layout_marginTop="108dp"
                android:layout_marginStart="68dp"
                android:id="@+id/tv_share_type"
                android:elevation="6dp"/>

            <View
                android:layout_width="1px"
                android:layout_height="17dp"
                android:background="#FF979797"
                app:layout_constraintTop_toTopOf="@+id/tv_share_type"
                app:layout_constraintBottom_toBottomOf="@+id/tv_share_type"
                app:layout_constraintStart_toEndOf="@+id/tv_share_type"
                android:layout_marginStart="18dp"
                android:id="@+id/v_line1"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:text="75x"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_type"
                app:layout_constraintStart_toEndOf="@+id/v_line1"
                android:layout_marginStart="18dp"
                android:id="@+id/tv_share_monetary_lever"
                android:elevation="6dp"/>

            <View
                android:layout_width="1px"
                android:layout_height="17dp"
                android:background="#FF979797"
                app:layout_constraintTop_toTopOf="@+id/v_line1"
                app:layout_constraintBottom_toBottomOf="@+id/v_line1"
                app:layout_constraintStart_toEndOf="@+id/v_line1"
                android:layout_marginStart="50dp"
                android:id="@+id/v_line2"
                android:elevation="6dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:text="BNBUSDT永续"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_type"
                app:layout_constraintStart_toEndOf="@+id/v_line2"
                android:layout_marginStart="18dp"
                android:id="@+id/tv_share_coin"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/main_buy_color"
                android:text="+683.72%"
                app:layout_constraintStart_toStartOf="@+id/tv_share_type"
                app:layout_constraintTop_toBottomOf="@+id/tv_share_type"
                android:id="@+id/tv_share_profit_loss"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99A4AD"
                android:textSize="12sp"
                android:text="开仓价格"
                android:id="@+id/tv_share_open_price_label"
                app:layout_constraintStart_toStartOf="@+id/tv_share_profit_loss"
                app:layout_constraintTop_toBottomOf="@+id/tv_share_profit_loss"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="287.034"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_open_price_label"
                app:layout_constraintStart_toEndOf="@+id/tv_share_open_price_label"
                android:id="@+id/tv_open_price"
                android:layout_marginStart="60dp"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99A4AD"
                android:textSize="12sp"
                android:text="标记价格"
                android:id="@+id/tv_share_mark_price_label"
                app:layout_constraintStart_toStartOf="@+id/tv_share_profit_loss"
                app:layout_constraintTop_toBottomOf="@+id/tv_share_open_price_label"
                android:layout_marginTop="5dp"
                android:elevation="6dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="287.034"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_mark_price_label"
                app:layout_constraintStart_toEndOf="@+id/tv_share_mark_price_label"
                android:id="@+id/tv_mark_price"
                android:layout_marginStart="60dp"
                android:elevation="6dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/cv_qrcode"
                app:layout_constraintStart_toStartOf="@+id/tv_share_open_price_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_share_mark_price_label"
                app:cardCornerRadius="3dp"
                android:layout_marginTop="46dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:id="@+id/iv_qrcode"
                    android:scaleType="fitXY"
                    android:padding="2dp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@+id/cv_qrcode"
                app:layout_constraintBottom_toBottomOf="@+id/cv_qrcode"
                app:layout_constraintStart_toEndOf="@+id/cv_qrcode"
                android:layout_marginStart="10dp"
                android:elevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="#FF99A4AD"
                    android:textSize="10sp"
                    android:id="@+id/tv_invite_code_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59900619"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_invite_code_label"
                    app:layout_constraintStart_toStartOf="@+id/tv_invite_code_label"
                    android:id="@+id/tv_invite_code"
                    android:layout_marginTop="-5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载CBOEX APP！"
                    android:textColor="#FF5488CF"
                    android:textSize="10sp"
                    android:layout_marginTop="-5dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_invite_code"
                    app:layout_constraintTop_toBottomOf="@+id/tv_invite_code" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/v_bottom_content" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_share_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_bottom_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            android:background="@drawable/shape_share_button"
            android:id="@+id/iv_download"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>