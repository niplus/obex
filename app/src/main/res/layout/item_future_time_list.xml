<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_future"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">
    <!--android:paddingRight="8dp"-->
    <!--android:paddingLeft="8dp"-->
    <!--android:background="?attr/market_bg"-->
    <!--android:layout_marginLeft="@dimen/small_dp"-->
    <!--android:layout_marginRight="@dimen/small_dp"-->

    <TextView
        android:id="@+id/market_list_divide_margin"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="?attr/reverse_bg"
        android:layout_height="@dimen/normal_dp">

    </TextView>
    <LinearLayout style="@style/horizontal_line"
        android:id="@+id/market_list_divide_line"
        android:background="?attr/reverse_bg2">
        <View style="@style/horizontal_line"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
        </View>
    </LinearLayout>
    <!--android:background="?attr/bg_color"-->
    <LinearLayout
        android:id="@+id/future_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/reverse_bg2"
        android:paddingTop="@dimen/small_dp"
        android:paddingBottom="@dimen/small_dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_img_container"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_favorite"
                android:layout_gravity="center"
                android:src="?attr/common_star_grey"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:id="@+id/txt_future_name"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="?attr/font_color"
                android:textSize="@dimen/big_size"
                android:layout_height="match_parent"
                tools:text="BTC0629"
                />

            <LinearLayout
                android:id="@+id/ll_market_volume"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/font_color4"
                    android:textSize="@dimen/small_size"
                    android:text="@string/market_deal_volume"/>
                <TextView
                    android:id="@+id/txt_future_volume"
                    android:textSize="@dimen/small_size"
                    android:textColor="?attr/font_color4"
                    android:text="@string/common_null"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical|right"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_future_price"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:gravity="center_vertical|right"
                android:layout_gravity="right"
                android:textColor="?attr/font_color"
                android:textSize="@dimen/normal_size"
                android:layout_height="match_parent"
                android:text="@string/common_null"
                tools:text="6000.45"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_dollar_price"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:gravity="center_vertical|right"
                android:layout_gravity="right"
                android:textColor="?attr/font_color4"
                android:textSize="@dimen/normal_size"
                android:layout_height="match_parent"
                android:text="@string/common_null"
                tools:text="$6000.45"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_future_trend"
            android:layout_width="70dp"
            android:singleLine="true"
            android:paddingTop="@dimen/small_dp0.5"
            android:paddingBottom="@dimen/small_dp0.5"
            android:layout_marginLeft="@dimen/normal_dp"
            android:layout_marginRight="@dimen/normal_dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_circular"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="@string/common_null"
            tools:text="+1.28%"
            />
    </LinearLayout>
</LinearLayout>
