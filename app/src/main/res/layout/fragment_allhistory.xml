<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/icon_back" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_checkbg"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_allhis_typecheck">

                <View
                    android:id="@+id/cv_contract"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/main_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0.3dp" />

                <View
                    android:id="@+id/cv_option"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/main_color"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0.3dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/option_contract"
                        android:textColor="@color/font_color_black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_option"
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/common_option"
                        android:textColor="?attr/main_color"
                        android:textSize="17sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_contract_click"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="?attr/font_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_option_click"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="?attr/font_color"
                    android:textSize="17sp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_datecheck"
                android:layout_width="18dp"
                android:layout_height="19.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/tradehis_time_white" />
        </RelativeLayout>

        <com.fota.android.widget.IndexViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="?attr/reverse_bg" />

    </LinearLayout>
</layout>