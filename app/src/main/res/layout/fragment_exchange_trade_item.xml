<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/horizontal_fill"
        android:layout_marginBottom="@dimen/small_dp1.5"
        android:layout_marginLeft="@dimen/normal_size"
        android:layout_marginRight="@dimen/normal_size"
        android:layout_marginTop="@dimen/small_dp1.5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/symbol_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <LinearLayout
            style="@style/wrap_style"
            android:layout_width="100dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/symbol"
                style="@style/wrap_style"
                android:layout_marginLeft="@dimen/small_dp"
                android:text="USDT"
                android:textColor="#D9FFFFFF"
                android:textSize="@dimen/big_size"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/symbol_statue_hold"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_marginLeft="@dimen/small_dp0.5"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/symbol_statue_hot"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_marginLeft="@dimen/small_dp0.5"
                android:visibility="gone"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/price_unit"
            style="@style/wrap_style"
            android:layout_marginTop="1dp"
            android:textColor="#FF8C8C8C"
            android:textSize="@dimen/small_size"
            />

        <TextView
            android:id="@+id/price"
            style="@style/horizontal_weight1"
            android:layout_marginLeft="@dimen/small_dp0.5"
            android:text="— —"
            android:textColor="#D9FFFFFF"
            android:textSize="@dimen/big_size"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/trace_percent"
            android:layout_width="80dp"
            android:layout_height="@dimen/space_30"
            android:background="@drawable/bg_circular"
            android:gravity="center"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:text="— —"
            android:textColor="?attr/bg_color"
            android:textSize="@dimen/normal_size"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/normal_size"/>

</LinearLayout>