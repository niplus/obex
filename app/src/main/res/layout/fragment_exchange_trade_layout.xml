                                    tools:text="max usdt" />

                                <LinearLayout
                                    android:id="@+id/percent_container"
                                    style="@style/horizontal_fill"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal"
                                    android:padding="1px">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="6dp"
                                    style="@style/horizontal_fill"
                                    android:layout_height="21dp"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/max_amount"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="21dp"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:text="@string/exchange_max_amount"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="11.52sp" />

                                    <TextView
                                        android:id="@+id/max_amount_value"
                                        style="@style/wrap_style"
                                        android:layout_height="42dp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:text="34773450"
                                        android:textColor="?attr/font_color"
                                        android:textSize="11.52sp" />

                                </LinearLayout>



                                <TextView
                                    android:id="@+id/btn_buy_sell"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="4dp"
                                    android:background="@drawable/ft_rounds"
                                    android:gravity="center"
                                    android:onClick="@{view.onClick}"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="17sp"
                                    tools:text="buy button" />

                            </LinearLayout>

                            <com.fota.android.widget.FuturesLinearLayout
                                android:id="@+id/future_layout"
                                style="@style/horizontal_weight1"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:clipChildren="true">

                                <LinearLayout
                                    android:id="@+id/future_layout_top"
                                    style="@style/horizontal_fill"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/ft2_corner_font4"
                                    android:padding="1dp">

                                    <TextView
                                        android:id="@+id/select_buy2"
                                        style="@style/horizontal_weight_fill"
                                        android:background="@drawable/ft_left_corner"
                                        android:gravity="center"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/exchange_buy_wishheigh"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/select_sell2"
                                        style="@style/horizontal_weight_fill"
                                        android:background="@drawable/ft_right_corner"
                                        android:gravity="center"
                                        android:maxLength="13"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/exchange_sell_wishlow"
                                        android:textSize="14sp" />

                                </LinearLayout>


                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:layout_marginTop="15dp"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:id="@+id/price_type2"
                                        android:layout_width="85dp"
                                        android:layout_height="40dp"
                                        android:gravity="center_vertical"
                                        android:onClick="@{view.onClick}">

                                        <TextView
                                            android:id="@+id/price_type_tv2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:text="@string/exchange_limit_price"
                                            android:textColor="?attr/font_color4"
                                            android:textSize="14sp" />

                                        <com.fota.android.commonlib.view.DownTrigonView
                                            android:layout_width="7.9dp"
                                            android:layout_height="4.6dp"
                                            android:layout_marginLeft="3dp"
