                                    <TextView
                                        style="@style/horizontal_weight1"
                                        android:layout_height="21dp"
                                        android:text="@string/exchange_max_money"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="12sp" />

                                    <TextView
