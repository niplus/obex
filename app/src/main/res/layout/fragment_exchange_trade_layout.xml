                                        android:textSize="14sp"
                                        tools:text="10" />

                                    <TextView
                                        android:id="@+id/price_other_2"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center_vertical"
                                        android:onClick="@{view.onClick}"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/price2_unit"
                                        style="@style/wrap_style"
                                        android:onClick="@{view.onClick}"
                                        android:text="USDT"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <View style="@style/horizontal_line" />

                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_vertical"
                                    android:elevation="1dp">

                                    <TextView
                                        android:id="@+id/amount2_tip"
                                        android:layout_width="85dp"
                                        android:layout_height="40dp"
                                        android:gravity="center_vertical"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/future_value"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/amount2"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="10dp"
                                        android:drawableRight="?attr/ident_del"
                                        android:gravity="center_vertical"
                                        android:inputType="number|numberDecimal"
                                        android:maxLength="13"
                                        android:textSize="14sp"
                                        tools:text="10" />

                                    <TextView
                                        android:id="@+id/money2_unit"
                                        style="@style/wrap_style"
                                        android:onClick="@{view.onClick}"
                                        android:text="BTC"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <View style="@style/horizontal_line" />

                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:layout_height="21dp"
                                    android:layout_marginTop="10dp"
