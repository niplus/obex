                            android:paddingBottom="6dp"
                            android:paddingTop="6dp"
                            android:clipChildren="false"
                            app:layout_scrollFlags="scroll">

                            <LinearLayout
                                android:id="@+id/exchange_layout"
                                style="@style/horizontal_weight1"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/exchange_layout_top"
                                    style="@style/horizontal_fill"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/ft2_corner_font4"
                                    android:padding="1dp">

                                    <TextView
                                        android:id="@+id/select_buy"
                                        style="@style/horizontal_weight_fill"
                                        android:background="@drawable/ft_left_corner"
                                        android:gravity="center"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/common_buy"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/select_sell"
                                        style="@style/horizontal_weight_fill"
                                        android:background="@drawable/ft_right_corner"
                                        android:gravity="center"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/common_sell"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:gravity="center_vertical">


                                    <LinearLayout
                                        android:id="@+id/price_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="38dp"
                                        android:gravity="center_vertical"
                                        android:onClick="@{view.onClick}">

                                        <TextView
                                            android:id="@+id/price_type_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:text="@string/exchange_limit_price"
                                            android:textColor="?attr/font_color4"
                                            android:textSize="14sp" />

                                        <com.fota.android.commonlib.view.DownTrigonView
                                            android:layout_width="7.9dp"
                                            android:layout_height="4.6dp"
                                            android:layout_marginLeft="3dp"
                                            app:view_color="?attr/font_color4" />

                                    </LinearLayout>


                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/price"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="38dp"
                                        android:layout_marginLeft="10dp"
                                        android:drawableRight="?attr/ident_del"
                                        android:gravity="center_vertical"
                                        android:inputType="number|numberDecimal"
                                        android:maxLength="13"
                                        android:textColor="#FF9CA5B7"
                                        android:textSize="14sp"
                                        tools:text="10" />

                                    <TextView
                                        android:id="@+id/price_other"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="38dp"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center_vertical"
                                        android:inputType="number|numberDecimal"
                                        android:onClick="@{view.onClick}"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <View style="@style/horizontal_line" />

                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/amount_tip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/short_amount"
                                        android:maxLines="1"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/amount"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="38dp"
                                        android:layout_marginLeft="10dp"
                                        android:drawableRight="?attr/ident_del"
                                        android:gravity="center_vertical"
                                        android:inputType="number|numberDecimal"
                                        android:maxLength="13"
                                        android:textSize="14sp"
                                        tools:text="10" />

                                    <TextView
                                        android:id="@+id/amount_unit"
                                        style="@style/wrap_style"
                                        android:onClick="@{view.onClick}"
                                        android:text="ETH"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />


                                </LinearLayout>

                                <View style="@style/horizontal_line" />

                                <LinearLayout
                                    style="@style/horizontal_fill"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/money_tip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:onClick="@{view.onClick}"
                                        android:text="@string/common_money"
                                        android:maxLines="1"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                    <com.fota.android.widget.btbwidget.ClearEdittext
                                        android:id="@+id/money"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="46dp"
                                        android:layout_marginLeft="10dp"
                                        android:drawableRight="?attr/ident_del"
                                        android:gravity="center_vertical"
                                        android:inputType="number|numberDecimal"
                                        android:maxLength="13"
                                        android:textSize="14sp"
                                        tools:text="21436.23" />

                                    <TextView
                                        android:id="@+id/money_other"
                                        style="@style/horizontal_weight1"
                                        android:layout_height="46dp"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center_vertical"
                                        android:maxLength="13"
                                        android:text="@string/money_buy_market"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/money_unit"
                                        style="@style/wrap_style"
                                        android:onClick="@{view.onClick}"
                                        android:text="BTC"
                                        android:textColor="?attr/font_color4"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <View style="@style/horizontal_line" />

                                <TextView
                                    android:id="@+id/max_balance"
                                    style="@style/horizontal_fill"
                                    android:layout_marginTop="4dp"
                                    android:textColor="?attr/font_color4"
                                    android:textSize="11.52sp"
