<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        style="@style/all_fill"
        android:background="?attr/bg_color"
        android:orientation="vertical">

        <FrameLayout style="@style/horizontal_fill">

            <LinearLayout
                android:id="@+id/exchange_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/exchange_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:onClick="@{view.onClick}" />

                <TextView
                    android:id="@+id/exchange_currency"
                    style="@style/wrap_style"
                    android:layout_marginLeft="10dp"
                    android:onClick="@{view.onClick}"
                    android:textColor="?attr/font_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/exchange_change_currency"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:onClick="@{view.onClick}">

                    <com.fota.android.commonlib.view.DownTrigonView
                        android:id="@+id/exchange_change_currency_arrow"
                        android:layout_width="7.9dp"
                        android:layout_height="4.6dp"
                        android:layout_gravity="center" />

                </FrameLayout>

                <View
                    style="@style/horizontal_weight1"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/transfer"
                    android:layout_width="21dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/big_dp"
                    android:onClick="@{view.onClick}"
                    android:src="?attr/common_change" />

                       <ImageView
                    android:id="@+id/img_type_change"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/big_dp"
                    android:onClick="@{view.onClick}"
                    android:src="?attr/chart_kline" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/futures_title"
                style="@style/horizontal_fill"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/future_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:onClick="@{view.onClick}" />

                <!--由于太大调回20-->
                <TextView
                    android:id="@+id/futures_currency"
                    style="@style/wrap_style"
                    android:onClick="@{view.onClick}"
                    android:textColor="?attr/font_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="BTC0729" />

                <FrameLayout
                    android:id="@+id/futures_change_currency"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:onClick="@{view.onClick}">

                    <com.fota.android.commonlib.view.DownTrigonView
                        android:id="@+id/futures_change_currency_arrow"
                        android:layout_width="7.9dp"
                        android:layout_height="4.6dp"
                        android:layout_gravity="center" />

                </FrameLayout>


                <TextView
                    android:id="@+id/futures_tv_date"
                    style="@style/horizontal_weight1"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:textColor="?attr/font_color4"
                    android:textSize="10sp"
                    tools:text="--" />


                <ImageView
                    android:id="@+id/transfer2"
                    android:layout_width="21dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:onClick="@{view.onClick}"
                    android:src="?attr/common_change" />
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_calc"
                    android:layout_marginBottom="3dp"
                    android:onClick="@{view.onClick}"
                    android:id="@+id/iv_calc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/futures_tv_lever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ft_rectangle"
                    android:gravity="center"
                    android:onClick="@{view.onClick}"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="x10"
                    android:textColor="?attr/font_color"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_type_change2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:onClick="@{view.onClick}"
                    android:src="?attr/chart_kline" />

            </LinearLayout>

            <TextView
                android:id="@+id/exchange_order_notice"
                style="@style/horizontal_fill"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="13.44sp"
                android:visibility="gone"
                tools:text="BTC/USDT 6251.buy.12" />


        </FrameLayout>

        <View style="@style/horizontal_line" />

        <LinearLayout
            android:id="@+id/exchange_top_info"
            style="@style/horizontal_fill"
            android:layout_height="29dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/first_wallet_unit"
                style="@style/wrap_style"
                android:text="@string/exchange_usable_btc"
                android:textColor="?attr/font_color4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/first_wallet"
                style="@style/horizontal_weight1"
                android:layout_marginLeft="4dp"
                android:text="--"
                android:textColor="?attr/font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_wallet_unit"
                style="@style/wrap_style"
                android:text="@string/exchange_usable_btc"
                android:textColor="?attr/font_color4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_wallet"
                style="@style/wrap_style"
                android:layout_marginLeft="4dp"
                android:text="--"
                android:textColor="?attr/font_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/futures_top_info"
            style="@style/horizontal_fill"
            android:gravity="center"
            android:onClick="@{view.onClick}"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <LinearLayout style="@style/horizontal_weight1">

                <TextView
                    style="@style/wrap_style"
                    android:text="@string/futures_rights"
                    android:textColor="?attr/font_color4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/futures_rights"
                    style="@style/horizontal_weight1"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="?attr/font_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                style="@style/horizontal_weight1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    style="@style/wrap_style"
                    android:text="@string/future_applies2"
                    android:textColor="?attr/font_color4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/futures_fd_yk"
                    style="@style/horizontal_weight1"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="?attr/font_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <FrameLayout
