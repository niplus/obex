                    android:layout_width="7.9dp"
                    android:layout_height="4.6dp"
                    android:layout_gravity="center" />

            </FrameLayout>


        </LinearLayout>

        <View style="@style/horizontal_line" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
