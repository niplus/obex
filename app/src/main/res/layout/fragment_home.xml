<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".moudles.home.HomeFragment"
        android:background="?attr/home_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="17dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll_title"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_home_mine"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆 / 注册"
                android:textColor="#ff707a8a"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:id="@+id/tv_login"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_message"
                android:id="@+id/iv_message"
                android:layout_marginStart="30dp"/>

        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/refreshLayout"
            app:layout_constraintTop_toBottomOf="@+id/ll_title"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.ndl.lib_common.widget.banner.Banner
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/banner"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        app:layout_constraintTop_toBottomOf="@+id/banner"
                        android:layout_marginTop="16dp"
                        android:src="@mipmap/bg_notice"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:id="@+id/iv_notice_bg"
                        />

                    <com.sunfusheng.marqueeview.MarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:mvAnimDuration="1000"
                        app:mvDirection="bottom_to_top"
                        app:mvInterval="3000"
                        app:mvTextColor="@color/black"
                        app:mvTextSize="14sp"
                        app:mvSingleLine="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@+id/iv_notice_bg"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_notice_bg"
                        app:layout_constraintStart_toStartOf="@+id/iv_notice_bg"
                        app:layout_constraintEnd_toEndOf="@+id/iv_notice_bg"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="?attr/home_menu_bg"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginTop="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/iv_notice_bg"
                        app:layout_constraintBottom_toBottomOf="@+id/rv_menu"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/iv_notice_bg"
                        android:paddingBottom="20dp"
                        android:paddingTop="15dp"
                        android:id="@+id/rv_menu"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_main_spot"
                        app:layout_constraintTop_toBottomOf="@+id/rv_menu"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        app:layout_constraintTop_toBottomOf="@+id/rv_main_spot"
                        android:layout_marginTop="18dp"
                        android:src="?attr/fast_buy_bg"
                        android:id="@+id/iv_fast_buy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_buy"
                        android:textColor="#ff6385e4"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@+id/iv_fast_buy"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_fast_buy"
                        app:layout_constraintStart_toStartOf="@+id/iv_fast_buy"
                        android:layout_marginStart="60dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        app:layout_constraintTop_toBottomOf="@+id/iv_fast_buy"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ll_tab">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contrace_list"
                            android:textColor="?attr/home_tab_color"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:textStyle="bold"
                            android:id="@+id/tv_future_tab"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/spot_list"
                            android:textColor="?attr/home_tab_color"
                            android:textSize="15sp"
                            android:layout_marginStart="19dp"
                            android:id="@+id/tv_spot_tab"
                            />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_coin_list"
                        app:layout_constraintTop_toBottomOf="@+id/ll_tab"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>