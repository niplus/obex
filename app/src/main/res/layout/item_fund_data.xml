<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="?attr/bg_color"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/order_main"
            style="@style/horizontal_fill">

            <View
                android:id="@+id/order_left"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/ft_left_corner" />

            <LinearLayout

                style="@style/horizontal_fill"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/horizontal_fill"
                    android:gravity="center_vertical">

                    <LinearLayout
                        style="@style/horizontal_weight1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/asset_name"
                            style="@style/wrap_style"
                            android:layout_height="25dp"
                            android:textColor="#FF4DB871"
                            android:textSize="16.32sp" />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   2022.04.16 12:23:46 \n- 2022.04.19 12:23:46"
                            android:textColor="#ff999999"
                            android:id="@+id/tv_time"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    style="@style/horizontal_fill"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        style="@style/wrap_style"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/wrap_style"
                            android:text="@string/common_type"
                            android:textColor="#FF606572"
                            android:textSize="9.6sp" />


                        <TextView
                            style="@style/wrap_style"
                            android:layout_marginTop="5dp"
                            android:text="@string/currency"
                            android:textColor="#FF606572"
                            android:textSize="9.6sp" />


                    </LinearLayout>

                    <LinearLayout
                        style="@style/horizontal_weight_fill"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/average_price"
                            style="@style/wrap_style"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:textSize="9.6sp" />

                        <TextView
                            android:id="@+id/open_position_price"
                            style="@style/wrap_style"
                            android:layout_marginTop="5dp"
                            android:text="7660.27"
                            android:textColor="?attr/font_color"
                            android:textSize="9.6sp" />


                    </LinearLayout>

                    <com.fota.android.widget.myview.DashLineView
                        android:layout_width="2dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        style="@style/wrap_style"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/wrap_style"
                            android:text="@string/common_money"
                            android:textColor="#FF606572"
                            android:textSize="9.6sp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/margin"
                            style="@style/wrap_style"
                            android:text="--"
                            android:textColor="?attr/font_color"
                            android:textSize="9.6sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>

