<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_color"
        android:orientation="vertical">

        <include layout="@layout/title_include" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bg_color"
            android:orientation="vertical"
            android:paddingLeft="38dp"
            android:paddingRight="38dp">

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_parent"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_child"
                    android:layout_alignParentBottom="true">

                    <com.fota.android.widget.btbwidget.VCodeButton
                        android:id="@+id/tv_getvcode_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="@string/regist_getcode"
                        android:textColor="?attr/font_color"
                        android:textSize="15sp" />

                    <com.fota.android.widget.btbwidget.ClearEdittext
                        android:id="@+id/edt_vcode_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_getvcode_phone"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="@string/regist_phonevcode_hint"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="?attr/font_color"
                        android:textColorHint="?attr/font_color3"
                        android:textSize="15sp" />


                </RelativeLayout>

                <View
                    android:id="@+id/view_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_parent"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_child"
                    android:layout_alignParentBottom="true">

                    <com.fota.android.widget.btbwidget.VCodeButton
                        android:id="@+id/tv_getvcode_email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="@string/regist_getcode"
                        android:textColor="?attr/font_color"
                        android:textSize="15sp" />

                    <com.fota.android.widget.btbwidget.ClearEdittext
                        android:id="@+id/edt_vcode_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_getvcode_email"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="@string/regist_emailvcode_hint"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="?attr/font_color"
                        android:textColorHint="?attr/font_color3"
                        android:textSize="15sp" />


                </RelativeLayout>

                <View
                    android:id="@+id/view_code_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_child"
                    android:layout_alignParentBottom="true">

                    <com.fota.android.widget.btbwidget.ClearEdittext
                        android:id="@+id/edt_google"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="@string/safe_bindgoogle_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="?attr/font_color"
                        android:textColorHint="?attr/font_color3"
                        android:textSize="15sp" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_googlecode"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/line_color" />


            <com.fota.android.widget.btbwidget.FotaButton
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_edt"
                android:layout_marginTop="60dp"
                android:background="@drawable/selector_login_btn_ft"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/sure"
                android:textSize="15sp"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>


</layout>