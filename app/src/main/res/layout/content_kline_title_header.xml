<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/bg_color"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_hight"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_dp1.5"
        android:paddingRight="@dimen/small_dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:clickable="false"
            android:focusable="false"
            android:src="?attr/icon_back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_future_name"
            android:textSize="@dimen/large_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/font_color"
            tools:text="BTC072929"/>

        <TextView
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_future_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font_color2"
            android:singleLine="true"
            android:textSize="@dimen/little_size"
            tools:text="has 10 days"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_hight"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minWidth="60dip"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_dp"
        android:paddingRight="@dimen/normal_dp">

        <ImageView
            android:id="@+id/img_minify"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/big_dp"
            android:src="?attr/chart_small_screen" />

        <TextView
            android:id="@+id/tv_period"
            android:textSize="12sp"
            android:visibility="gone"
            android:background="@drawable/border_for_kline_pop"
            android:padding="2dp"
            android:textColor="?attr/font_color"
            tools:text="15min"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_magnify"
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/big_dp"
            android:src="?attr/chart_full_screen" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_type_change"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/big_dp"
            android:src="?attr/chart_kline" />

    </LinearLayout>

</LinearLayout>
