<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_future_chart"
    android:orientation="vertical"
    android:paddingLeft="@dimen/small_dp"
    android:paddingRight="@dimen/small_dp"
    android:layout_marginTop="@dimen/normal_dp"
    android:background="?attr/reverse_bg"
    android:layout_width="match_parent"
    android:layout_height="135dp">
    <!--android:background="@android:color/transparent"-->
    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/reverse_bg"
        android:gravity="center"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

    <!--android:elevation="3dp"-->
    <!--android:background="@drawable/ft_corner_bg_color"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/reverse_bg"
            android:gravity="center"
            android:orientation="vertical">
            <!--android:background="@drawable/ft_corner_market_home_chart"-->
            <FrameLayout
                android:layout_width="match_parent"
                android:background="?attr/reverse_bg2"
                android:layout_height="0dp"
                android:layout_weight="8">

                <com.guoziwei.fota.chart.view.fota.LittlePageTimeView
                    android:id="@+id/time_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.guoziwei.fota.chart.view.fota.LittlePageTimeView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_last_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/font_color"
                        android:textSize="@dimen/large_size"
                        android:text="@string/common_null"
                        tools:text="408987.34" />

                    <TextView
                        android:id="@+id/txt_up_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/font_color"
                        android:textSize="@dimen/small_size"
                        android:text="@string/common_null"
                        tools:text="+2.34%" />

                </LinearLayout>
            </FrameLayout>

            <!--android:background="@drawable/ft_corner_market_home_bottom"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/market_card_item_color1"
                android:paddingBottom="@dimen/small_dp0.5"
                android:paddingTop="@dimen/small_dp0.5">

                <View
                    android:layout_width="2dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/small_dp1.5"
                    android:layout_marginRight="@dimen/small_dp0.5"
                    android:layout_marginTop="@dimen/small_dp0.5"
                    android:background="@drawable/bg_button_blue_color" />

                <TextView
                    android:id="@+id/txt_future_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="?attr/font_color"
                    tools:text="BTC0629" />

                <LinearLayout
                    android:id="@+id/ll_img_container"
                    android:paddingRight="4dp"
                    android:paddingLeft="12dp"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/img_favorite"
                        android:layout_gravity="center"
                        android:src="?attr/common_star_grey"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>