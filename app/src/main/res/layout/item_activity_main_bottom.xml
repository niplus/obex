<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_me"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_me"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="3.5dp"/>

        <ImageView
            android:id="@+id/image_me_select"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="3.5dp" />

        <com.fota.android.widget.btbwidget.AutoScaleTextView
            android:id="@+id/tv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/main_me"
            android:textColor="@drawable/main_text_tab_selector"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

</LinearLayout>
