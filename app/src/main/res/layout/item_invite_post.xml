<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/iv_post"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/img_invite_post" />

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#FFF"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/iv_post"
            app:layout_constraintStart_toStartOf="@+id/iv_post"
            app:layout_constraintEnd_toEndOf="@id/iv_post" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:id="@+id/tv_invite_code"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333"
            android:text="@string/futures_risk"
            app:layout_constraintTop_toBottomOf="@+id/tv_invite_code"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_qrcode"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_post"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginEnd="15dp"
            android:id="@+id/iv_qrcode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>