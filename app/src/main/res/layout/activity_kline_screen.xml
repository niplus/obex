<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <variable
            name="view"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout style="@style/all_fill">

        <LinearLayout
            style="@style/all_fill"
            android:orientation="vertical">

            <com.fota.android.widget.KlineTitleBarLayout
                android:id="@+id/bar_markets_kline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/bg_color" />

            <View style="@style/horizontal_line"
                android:background="?attr/divider_line_color"/>

            <LinearLayout
                style="@style/vertical_weight1"
                android:background="?attr/bg_color"
                android:orientation="vertical">

                <com.guoziwei.fota.chart.view.fota.FotaBigKLineBarChartView
                    android:id="@+id/kline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1">

                </com.guoziwei.fota.chart.view.fota.FotaBigKLineBarChartView>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/fragment_container" />

    </FrameLayout>
</layout>