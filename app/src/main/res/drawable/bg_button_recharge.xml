            <gradient android:angle="315" android:endColor="#1D2C56" android:startColor="#3E578F" android:type="linear" />

            <corners android:radius="4dip" />
        </shape>

    </item>


    <item android:state_enabled="false">
        <shape>
            <solid android:color="?attr/font_color4" />

            <corners android:radius="4dip" />
        </shape>
    </item>

</selector>